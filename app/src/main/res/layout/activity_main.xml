<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/img">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добро пожаловать!"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/vhod"
        app:layout_constraintBottom_toTopOf="@id/vip"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_marginBottom="95dp"
        android:id="@+id/dobr"
        android:gravity="center"
        android:layout_marginTop="255dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выполните вход \n или зарегистрируйтесь."
        android:textSize="16dp"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dobr"
        android:gravity="center"
        android:id="@+id/vip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="55dp"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold"
        android:id="@+id/vhod"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажми сюда"
        android:textColor="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintStart_toEndOf="@id/leftt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/syda"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыл пароль?"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/linear"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="75dp"
        android:id="@+id/leftt"
        android:layout_marginTop="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/vip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/linear"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/crre"
            android:hint="Введите вашу почту"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:padding="15dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="70dp"
            android:id="@+id/vvv"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/crre"
            android:hint="Введите пароль"
            android:textSize="15dp"
            android:textColor="@color/gray"
            android:padding="15dp"
            android:layout_marginHorizontal="15dp"
            android:id="@+id/vve"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Войти"
            android:background="@drawable/btn"
            android:layout_marginHorizontal="15dp"
            android:padding="15dp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:textColor="@color/white"
            android:id="@+id/voiti"

            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>